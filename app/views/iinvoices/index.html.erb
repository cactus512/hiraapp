<h1>Listing iinvoices</h1>

<table>
  <thead>
    <tr>
      <th>Date</th>
      <th>Company</th>
      <th>Tax</th>
      <th>Salesperson</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @iinvoices.each do |iinvoice| %>
      <tr>
        <td><%= iinvoice.date %></td>
        <td><%= iinvoice.company %></td>
        <td><%= iinvoice.tax %></td>
        <td><%= iinvoice.salesperson %></td>
        <td><%= link_to 'Show', iinvoice %></td>
        <td><%= link_to 'Edit', edit_iinvoice_path(iinvoice) %></td>
        <td><%= link_to 'Destroy', iinvoice, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

